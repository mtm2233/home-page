{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",  // TS文件编译后会放入到此文件夹内
        "baseUrl": ".",
        "typeRoots": [ "src/types/*", "./node_modules/@types"]
    },
    "include": [
        "src/**/*"
    ],
}